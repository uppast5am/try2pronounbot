{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es2017",
        "outDir": "./bin",
        "sourceMap": true,
        "module": "commonjs",
        "experimentalDecorators": true
    },
    "include": [
        "api/**/*.ts",
        "src/**/*.ts",
        "commands/*.*",
        "events/*.*",
        "main.ts",
        "config/**/*.json",
        "locale/*.json"
    ],
    "exclude": [
        "node_modules",
        "bin",
        "config/config.init.json"
    ]
}
